<section class="points">
  <div class="container">
    <div class="row">
      <div class="col-lg-12">
        <h1 class="points__h1">
          <%= @contact.title %>
        </h1>
      </div>
    </div>
  </div>
  <% @cities.order(title: :asc).each do |city| %>
  <% if city.points.count != 0 %>
  <div class="container">
    <div class="row">
      <div class="col-lg-12">
        <h2 class="points__h2">
          <%= city.title %>
        </h2>
      </div>
      <% city.points.where(coming_soon: false).order(title: :asc).each_with_index do |point, index| %>
      <div class="col-lg-4 col-md-6">
        <ul class="cities__ul">
          <% if point.address != "" %>
          <li class="cities__li">
            <span class="text--bold">
              Адрес:
            </span>
            <%= point.address %>
          </li>
          <% end %>
          <% if point.emailone != "" %>
          <li class="cities__li">
            <span class="text--bold">
              Email:
            </span>
            <a class="cities__link" href="mailto:<%= city.emailone %>">
              <%= point.emailone %>
            </a>
          </li>
          <% end %>
          <% if point.emailtwo != "" %>
          <li class="cities__li">
            <span class="text--bold">
              Email:
            </span>
            <a class="cities__link" href="mailto:<%= city.emailtwo %>">
              <%= point.emailtwo %>
            </a>
          </li>
          <% end %>
          <% if point.phoneone != "" %>
          <li class="cities__li">
            <span class="text--bold">
              Моб.
            </span>
            <a href="tel:+<%= city.phoneone %>">
              <%= point.phoneone %>
            </a>
          </li>
          <% end %>
          <% if point.phonetwo != "" %>
          <li class="cities__li">
            <span class="text--bold">
              Моб.
            </span>
            <a href="tel:+<%= city.phonetwo %>">
              <%= point.phonetwo %>
            </a>
          </li>
          <% end %>
          <% if point.worktime != "" %>
          <li class="cities__li">
            <span class="text--bold">
              График:
            </span>
            <%= point.worktime %>
          </li>
          <% end %>
          <% if point.name != "" %>
          <li class="cities__li">
            <span class="text--bold">
              Менеджер:
            </span>
            <%= point.name %>
          </li>
          <% end %>
        </ul>
      </div>
      <% end %>

      <% city.points.where(coming_soon: true).order(title: :asc).each_with_index do |point, index| %>
      <% if point.coming_soon == true %>
      <div class="col-lg-12">
        <p class="coming-soon__p">
          <%= index + 1 %>.
          <span class="coming-soon__span pink--text">
            Скоро
          </span>
          открытие официального представительства
          <span class="coming-soon__span pink--text">
            Travel Me Agency.
          </span>
        </p>
      </div>
      <% end %>
      <% end %>

    </div>
  </div>
  <% end %>
  <% end %>
