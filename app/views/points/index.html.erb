<section class="admin">
  <div class="container">
    <div class="row">
      <table class="table table-striped">
        <thead>
          <tr>
            <th scope="col">Город</th>
            <th></th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @points.each do |point| %>
          <tr>
            <td><%= point.title %></td>
            <td><%= point.address %></td>
            <td><%= point.name %></td>
            <td><%= point.city.title %></td>
            <td><%= link_to 'Редактировать', edit_point_path(point) %></td>
            <td><%= link_to 'Удалить', point, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
          <% end %>
        </tbody>
      </table>

    </div>
    <div class="col-lg-12">
      <%= link_to 'Добавить точку продаж', new_point_path, class: "admin__btn" %>
    </div>
  </div>
</section>
