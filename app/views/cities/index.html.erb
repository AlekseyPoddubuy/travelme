<section class="admin">
  <div class="container">
    <div class="row">

      <table class="table table-striped">
        <thead>
          <tr>
            <th scope="col">Город</th>
            <th></th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @cities.each do |city| %>
          <tr>
            <td><%= city.title %></td>
            <td><%= link_to 'Редактировать', edit_city_path(city) %></td>
            <td><%= link_to 'Удалить', city, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
          <% end %>
        </tbody>
      </table>

    </div>
    <div class="col-lg-12">
      <%= link_to 'Добавить город', new_city_path, class: "admin__btn" %>

    </div>

  </div>
</section>